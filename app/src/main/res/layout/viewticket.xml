<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightdarkblue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp">
        <include
            layout="@layout/navigationheader"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tikcetcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="77dp"
        android:background="@color/lightdarkblue"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.026">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/lightdarkblue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansbold"
                    android:includeFontPadding="false"
                    android:text="@string/tickettitle"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/linearLayout3"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:background="@color/lightdarkblue"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.132">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/orange"
                        android:fontFamily="@font/notosansmedium"
                        android:includeFontPadding="false"
                        android:text="@string/art"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/ArtMusic"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:backgroundTint="@drawable/ticketcathover"
                        android:fontFamily="@font/notosansmedium"
                        android:includeFontPadding="false"
                        android:text="@string/music"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/ArtAM"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@drawable/ticketcathover"
                        android:fontFamily="@font/notosansmedium"
                        android:includeFontPadding="false"
                        android:text="@string/anm"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/ArtOther"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@drawable/ticketcathover"
                        android:gravity="center"
                        android:fontFamily="@font/notosansmedium"
                        android:includeFontPadding="false"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:text="@string/other"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_marginTop="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="560dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0.136">

            <ListView
                android:layout_marginLeft="5dp"
                android:id="@+id/artlist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                tools:listitem="@layout/templatelist" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>